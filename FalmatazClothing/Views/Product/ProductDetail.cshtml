@using FalmatazClothing.Models.DTO.Product;
@model ProductDto

@{
    ViewData["Title"] = "ProductDetail";
}

<div class="col-md-4">
    <div class="card">
        <div class="card-header">
            @Model.Name
            <div class="card-body">
                <p class="card-text">Name: @Model.Name</p>
                <p class="card-text">MaterialType: @Model.MaterialType</p>
                <p class="card-text">ImageProduct: @Model.ImageProduct</p>
                <p class="card-text">Price: @Model.Price</p>
                <a asp-controller="Product" asp-action="UpdateProduct"
                   asp-route-id="@Model.Id" class="btn btn-dark">Edit</a>
            </div>
        </div>
    </div>
</div>