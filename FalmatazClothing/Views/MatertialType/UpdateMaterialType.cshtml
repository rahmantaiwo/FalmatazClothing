@using FalmatazClothing.Models.DTO.MaterialType;
@model MaterialTypeDto;
@{
    ViewData["Title"] = "UpdateMaterialType";
    var id = Context.GetRouteValue("Id").ToString();
}

<div class="row">
    <div class="col-md-8 rounded mx-auto border p-3">
        <h4 class="text-center">UpdateMaterial</h4>
        <form asp-controller="MaterialType" asp-action="UpdateMaterialType">

            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" name="Name" class="form-control" value="@Model.Name" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Image</label>
                <input type="file" class="form-control" name="ImageUrl" value="@Model.ImageUrl" multiple required />
            </div>

            <div class="row">
                <button asp-controller="MaterialType" asp-action="UpdateMaterialType"
                        type="Update" class="btn btn-outline-dark">
                    Update
                </button>
            </div>
        </form>
    </div>
</div>
