@using FalmatazClothing.Models.DTO.Inventory;
@model IEnumerable<InventoryDto>;

@{
    ViewData["Title"] = "Inventories";
}

<a href="@Url.Action("CreateInventory", "Inventory")" class="btn btn-success mb-2">Create Inventory</a>

<div class="col-md-10">
    <table class="table table-responsive">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Fabric</th>
                <th scope="col">Quantity (Yard)</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>
                <th scope="col">Action</th>
            </tr>
        </thead>

        <tbody>
            @if (Model?.Any() ?? false)
            {
                var index = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@index</th>
                        <td>@item.Fabric</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price</td>
                        <td>
                            <img src="@item.ImageFileName" alt="Image" style="width: 100px; height: auto;" />

                        </td>

                        <td>
                            <a asp-controller="Inventory" asp-action="InventoryDetail"
                               asp-route-id="@item.Id" class="btn btn-outline-info">Detail</a>

                            <a asp-controller="Inventory" asp-action="DeleteInventory" asp-route-id="@item.Id" 
                            class="btn btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">No Records Found</td>
                </tr>
            }
        </tbody>
    </table>
</div>
