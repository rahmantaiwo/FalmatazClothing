@using FalmatazClothing.Models.DTO.Design
@{
    ViewData["Title"] = "CreateDesign";
}
<div class="row">
    <div class="col-md-8 rounded mx-auto border p-3 ">
        <h4 class="text-center">Design</h4>
        <p class="text-center">Create Design</p>
        <form asp-controller="Design" asp-action="CreateDesign">

            <div class="mb-3">
                <label class="form-label">Fabric</label>
                <input type="text" class="form-control" name="Fabric" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Style</label>
                <input type="text" class="form-control" name="Style" value="" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Price</label>
                <input type="number" class="form-control" name="Price" value="" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Image</label>
                <input type="" class="form-control" name="" value="" required />
            </div>

            <div class="row">
                <button type="submit">Insert</button>
            </div>
        </form>
    </div>
</div>
