@using FalmatazClothing.Models.DTO.CartItem;
@model IEnumerable<CartItemDto>;

@{
    ViewData["Title"] = "Cart Items";
}
<a href="@Url.Action("CreateCartItem", "CartItem")" class="btn btn-success mb-2">Select Items To Cart</a>
<h2>Shopping Cart</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td><img src="~/@item.ProductImage" alt="Product Image" style="width: 50px; height: auto;"></td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>@(item.Price * item.Quantity)</td>
                <td>
                    <a asp-controller="CartItem" asp-action="UpdateCartItem" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                    <a asp-controller="CartItem" asp-action="DeleteCartItem" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
